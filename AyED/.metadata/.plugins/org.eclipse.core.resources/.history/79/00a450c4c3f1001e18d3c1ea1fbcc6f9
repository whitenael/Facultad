import practica2.BinaryTree;

public class Util {
	
	
	// genera arbol de longitud 10 desde la raiz
	@SuppressWarnings({ "unchecked", "rawtypes" })
	public BinaryTree<Integer> generarArbolEnteros(int length){			
		
		if (length == 0)
			return null;
		
		int data = getRandomNumber(1, 10000);
		
		BinaryTree<Integer> br = new BinaryTree(data);
		br.addLeftChild(generarArbolEnteros(length-1));
		br.addRightChild(generarArbolEnteros(length-1));
		
		return br;
		
	}
	
	public int getRandomNumber(int min, int max) {
	    return (int) ((Math.random() * (max - min)) + min);
	}
	
}
