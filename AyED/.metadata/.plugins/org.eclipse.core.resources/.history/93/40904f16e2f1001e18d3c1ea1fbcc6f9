package practica2.ejercicio3;
import java.util.ArrayList;
import java.util.List;

import practica2.BinaryTree;

public class ContadorArbol {
	public BinaryTree<Integer> tree;
	
	private void numerosParesRecursivo(BinaryTree<Integer> tree, List<Integer> lista) {					
		if (this.tree != null) {
			numerosParesRecursivo(tree.getLeftChild(), lista);
			if (tree.getData() %2 == 0)
				lista.add(tree.getData());
			numerosParesRecursivo(tree.getRightChild(), lista);				
		}
	}
	
	public ArrayList<Integer> numerosPares() {
		ArrayList<Integer> lista = new ArraList();
		numerosPares(this, lista);
		return lista;
	}
	
}
