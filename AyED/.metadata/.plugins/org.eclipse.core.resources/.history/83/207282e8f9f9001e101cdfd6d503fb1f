package practica2.ejercicio7;

import practica2.BinaryTree;

public class Arboles {

	private BinaryTree<Integer> tree;
	
	public Arboles() {}
	
	public Arboles(BinaryTree<Integer> tree) {
		this.tree = tree;
	}	

	public boolean isLeftTree(int num) {

		return false;
	}

	public boolean buscarNumeroRecursivo(BinaryTree<Integer> tree, int num) {

		if (tree == null)
			return false;

		if (tree.getData() == num)
			return true;

		return buscarNumero(tree.getLeftChild(), num) || buscarNumero(tree.getRightChild(), num);
	}
}
